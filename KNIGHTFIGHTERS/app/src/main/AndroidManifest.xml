        </activity>
        <activity
            android:name=".Level_3.Level3"
            android:label="@string/title_activity_level3"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="au.com.knight_fighters.Level3" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Level_4.Level4"
            android:label="@string/title_activity_level4"
