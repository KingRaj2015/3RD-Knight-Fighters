                <action android:name="au.com.knight_fighters.Level2background" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Level_3.Level3background"
            android:label="@string/title_activity_level3background"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="au.com.knight_fighters.Level3background" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Level_4.Level4background"
            android:label="@string/title_activity_level4background"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="au.com.knight_fighters.Level4background" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Level_2.Level2"
            android:label="@string/title_activity_level2"
